{
  "extends": "../../packages/config/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/web/*": ["./src/*"],
      "~/ui/*": ["../../packages/ui/src/*"],
      "~/validation/*": ["../../packages/validation/src/*"]
    }
  },
  "include": [
    "../packages/**/*.{ts,tsx}",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
