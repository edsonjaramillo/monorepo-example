{
  "name": "db",
  "version": "1.0.0",
  "author": "Edson Antonio Jaramillo Balderrama",
  "main": "dist/index.mjs",
  "module": "dist/cjs/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:cjs": "tsup --format cjs",
    "build:esm": "tsup --format esm",
    "clean": "rm -rf dist",
    "clean_node_modules": "rm -rf node_modules",
    "dev:db:generate": "env-cmd -f .env.local drizzle-kit generate",
    "dev:db:migrate": "env-cmd -f .env.local tsx src/dev:db/migrate.ts",
    "dev:db:push": "env-cmd -f .env.local drizzle-kit push",
    "dev:db:studio": "env-cmd -f .env.local drizzle-kit studio",
    "production:db:generate": "env-cmd -f .env.production drizzle-kit generate",
    "production:db:migrate": "env-cmd -f .env.production drizzle-kit migrate",
    "production:db:push": "env-cmd -f .env.production drizzle-kit push",
    "production:db:studio": "env-cmd -f .env.production drizzle-kit studio"
  },
  "dependencies": {
    "drizzle-orm": "0.30.10",
    "postgres": "3.4.4",
    "uuidv7": "1.0.0",
    "validation": "workspace:*",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@types/node": "20.14.2",
    "drizzle-kit": "0.21.4",
    "env-cmd": "10.1.0",
    "esbuild": "0.21.5",
    "tsup": "8.1.0",
    "typescript": "5.4.5"
  }
}
